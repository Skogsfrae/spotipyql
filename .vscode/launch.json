  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "console": "internalConsole",
      "env": {
        "FLASK_APP": "spotipyql",
        "FLASK_ENV": "development",
        "SPOTIFY_SCOPES": "user-read-private user-read-email",
        "SPOTIPY_REDIRECT_URI": "http://localhost:5000/callback"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload"
      ],
      "jinja": true
    }
  ]
}